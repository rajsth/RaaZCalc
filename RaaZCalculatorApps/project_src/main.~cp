void __fastcall TForm1::Button1Click(TObject *Sender)
{
	Timer1->Enabled=True;
  Image2->Visible=True;
  if(i==1)
    {
     	Panel1->Caption=1;
    }
    if(i==2)
    {
     	Panel1->Caption=Panel1->Caption*10+1;
    }
    if(i==3)
    {
     	Panel1->Caption=Panel1->Caption*10+1;
    }
    if(i==4)
    {
     	Panel1->Caption=Panel1->Caption*10+1;
    }
    if(i==5)
    {
     	Panel1->Caption=Panel1->Caption*10+1;
    }
    if(i==6)
    {
     	Panel1->Caption=Panel1->Caption*10+1;
    }
    if(i==7)
    {
     	Panel1->Caption=Panel1->Caption*10+1;
    }
    if(i==8)
    {
     	Panel1->Caption=Panel1->Caption*10+1;
    }
    if(i==9)
    {
     	Panel1->Caption=Panel1->Caption*10+1;
    }
    i++;

}
