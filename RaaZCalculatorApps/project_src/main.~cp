//---------------------------------------------------------------------------
void __fastcall TForm1::Button16Click(TObject *Sender)
{
	Timer12->Enabled=True;
  	Image24->Visible=True;
   if(sign=='+')
    {
    	Panel1->Caption = StrToInt(Panel1->Caption) + StrToInt(Label2->Caption);
    }
    if(sign=='-')
    {
    	Panel1->Caption = StrToInt(Label2->Caption) - StrToInt(Panel1->Caption);
    }
    if(sign=='*')
    {
    	Panel1->Caption = StrToInt(Label2->Caption) * StrToInt(Panel1->Caption);
    }
    if(sign=='/')
    {
    	Panel1->Caption = StrToInt(Label2->Caption) / StrToInt(Panel1->Caption);
    }
     if(sign=='1/x')
    {
    	Panel1->Caption = 100/StrToInt(Label2->Caption);
    }
    i=1;
}

